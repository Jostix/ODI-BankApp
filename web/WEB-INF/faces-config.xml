<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <application>
        <resource-bundle>
            <base-name>ch.hearc.ig.odi.customeraccount.lang.messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>fr</supported-locale>
        </locale-config>
    </application>
    <managed-bean>
        <managed-bean-name>customerCreateBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.bean.CustomerCreateBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
        <managed-bean>
        <managed-bean-name>AccountCreateBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.bean.AccountCreateBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>CustomerDetailBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.bean.CustomerDetailBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>CustomerBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.bean.CustomerBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
        <managed-bean>
        <managed-bean-name>AccountDetailBean</managed-bean-name>
        <managed-bean-class>ch.hearc.ig.odi.customeraccount.bean.AccountDetailBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>  
        <from-view-id>/customerList.jsp</from-view-id>
        <navigation-case>
            <from-action>#{CustomerDetailBean.detailAction(cust.number)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/customerDetail.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{CustomerDetailBean.detaillAction(cust.number)}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/customerList.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
        <navigation-rule>  
        <from-view-id>/customerDetail.jsp</from-view-id>
        <navigation-case>
            <from-action>#{AccountDetailBean.detailAction(CustomerDetailBean.number,acc.number)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/accountDetail.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{AccountDetailBean.detaillAction(CustomerDetailBean.number,acc.number)}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/customerDetail.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/createCustomer.jsp</from-view-id>
        <navigation-case>
            <from-action>#{customerCreateBean.createCustomer}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/createCustomerOk.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{customerCreateBean.createCustomer}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/createCustomerOk.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>    
    <navigation-rule>
        <from-view-id>/createCustomer.jsp</from-view-id>
        <navigation-case>
            <from-action>backHome</from-action>
            <to-view-id>/customerList.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>    
    
        <navigation-rule>
        <from-view-id>/createAccount.jsp</from-view-id>
        <navigation-case>
            <from-action>#{AccountCreateBean.createAccount(CustomerDetailBean.number)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/createAccountOk.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{AccountCreateBean.createAccount(CustomerDetailBean.number)}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/createAccountOk.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>  
  
</faces-config>
